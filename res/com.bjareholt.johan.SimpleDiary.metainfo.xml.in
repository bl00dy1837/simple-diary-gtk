<component type="desktop-application">
    <id>@app_id@</id>
    <name>@name@</name>
    <summary>@summary@</summary>
    <url type="homepage">https://github.com/johan-bjareholt/simple-diary-gtk</url>

    <description>
        <p>@summary@. A few notable features are:</p>
        <ul>
            <li>Saves entries in standard markdown</li>
            <li>Adding images to your entries</li>
            <li>Scales on desktops, laptops, tablets and phones</li>
            <li>Dark mode</li>
        </ul>
    </description>

    <categories>
        <category>Office</category>
    </categories>

    <launchable type="desktop-id">@app_id@.desktop</launchable>

    <screenshots>
        <screenshot>
            <caption>View of the list of diary entries</caption>
            <image>https://johan.bjareholt.com/img/projects/simple-diary/entry_list.png</image>
        </screenshot>
        <screenshot>
            <caption>View of the diary entry editor</caption>
            <image>https://johan.bjareholt.com/img/projects/simple-diary/entry_edit.png</image>
        </screenshot>
    </screenshots>

    <update_contact>johan _AT_ bjareho.lt</update_contact>
    <project_license>GPL-3.0+</project_license>
    <metadata_license>MIT</metadata_license>
    <content_rating type="oars-1.1"/>
    <releases>
        <release version="v0.3.1" timestamp="2021-08-29">
            <description>
                Migrated from GTK3 to GTK4.
                Migrated from libhandy to libadwaita.
                Migrated from GtkWebKit to gtkmdview.
                Rewrote image picker.
            </description>
        </release>
        <release version="v0.2.0" timestamp="2021-04-01">
            <description>
                Improved UI for desktop.
                Lots of bug fixes.
            </description>
        </release>
        <release version="v0.1.7" timestamp="2021-01-24">
            <description>
                New icon and improved dark mode
            </description>
        </release>
        <release version="v0.1.6" timestamp="2021-01-17">
            <description>
                Add SettingsView and DarkMode
            </description>
        </release>
        <release version="v0.1.5" timestamp="2021-01-10">
            <description>
                Fix bug not properly deleting photos when deleting diary
            </description>
        </release>
        <release version="v0.1.4" timestamp="2021-01-10">
            <description>
                Improve interface for small formfactor devices
            </description>
        </release>
        <release version="v0.1.0" timestamp="2021-01-06"/>
    </releases>
</component>
